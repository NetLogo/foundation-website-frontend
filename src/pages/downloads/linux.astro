---
import Layout from "../../layouts/Layout.astro";
import { DownloadSection } from "../../components/download/download-section";
import MachineHelp from "../../components/download/download-machine-help";
import NetLogoApi from "../../utils/api";
import DonationSection from "../../components/download/donation-section";

const api = new NetLogoApi();

const pageData = await api.getDownloadPageData();
---

<Layout
    show_footer_buttons={false}
    title="NetLogo Download for Linux"
    description="NetLogo download page"
>
    <DownloadSection downloadData={pageData["netlogo_versions"]} devOs="Linux" client:load />
    <MachineHelp platformMachine="Linux machine" 
    machineLink="https://www.howtogeek.com/198615/how-to-check-if-your-linux-system-is-32-bit-or-64-bit/"
    otherplatform1="Windows"
    otherplatform2="Mac" />
    <DonationSection donationArray={pageData["donation_data"]} client:load />
</Layout>